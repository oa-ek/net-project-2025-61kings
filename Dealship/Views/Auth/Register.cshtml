@model Dealship.Models.User

@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
    <div class="register-container">
        <h2>Реєстрація</h2>

        <form asp-action="Register" method="post">
            <div>
                <label for="FullName">Повне ім’я:</label>
                <input asp-for="FullName" required />
            </div>

            <div>
                <label for="Email">Email:</label>
                <input asp-for="Email" type="email" required />
            </div>

            <div>
                <label for="Password">Пароль:</label>
                <input name="password" type="password" required />
            </div>

            <button type="submit">Зареєструватися</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <p class="error-message">
                Помилка: @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
            </p>
        }

        <p>Вже маєте акаунт? <a asp-controller="Auth" asp-action="Login">Увійти</a></p>
    </div>
</body>
</html>