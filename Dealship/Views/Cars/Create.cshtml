@model Dealship.Models.Car

@{
    ViewData["Title"] = "Create";
}

<h1>Create Car</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mileage"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Зображення</label>
                <input type="file" name="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EngineId"></label>
                <select asp-for="EngineId" asp-items="ViewBag.EngineId" class="form-control">
                    <option value="">-- Виберіть двигун --</option>
                </select>
                <span asp-validation-for="EngineId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TransmissionId"></label>
                <select asp-for="TransmissionId" asp-items="ViewBag.TransmissionId" class="form-control">
                    <option value="">-- Виберіть трансмісію --</option>
                </select>
                <span asp-validation-for="TransmissionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FuelTypeId"></label>
                <select asp-for="FuelTypeId" asp-items="ViewBag.FuelTypeId" class="form-control">
                    <option value="">-- Виберіть тип палива --</option>
                </select>
                <span asp-validation-for="FuelTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ColorId"></label>
                <select asp-for="ColorId" asp-items="ViewBag.ColorId" class="form-control">
                    <option value="">-- Виберіть колір --</option>
                </select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Створити</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">← Назад до списку</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

